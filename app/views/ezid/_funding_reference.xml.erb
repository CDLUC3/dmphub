<%# locals: presenter, funding, title %>
<fundingReference>
  <funderName><%= funding.affiliation.name %></funderName>

  <% if funding.affiliation.fundrefs.any? %>
    <funderIdentifier funderIdentifierType="Crossref Funder"><%= funding.affiliation.fundrefs.last.value %></funderIdentifier>
  <% end %>

  <% if funding.funded? %>
    <% if funding.urls.any? %>
      <awardNumber awardURI="<%= funding.urls.last.value %>">
        <%= presenter.award_number(funding: funding) %>
      </awardNumber>
    <% else %>
      <awardNumber><%= funding.identifiers.last.value %></awardNumber>
    <% end %>

    <awardTitle><%= presenter.scrub(title) %></awardTitle>
  <% end %>
</fundingReference>
