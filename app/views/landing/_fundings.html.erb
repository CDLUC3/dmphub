<%# locals: fundings %>

<% if fundings.any? %>
  <ul class="landing-list">
    <% fundings.each do |funding| %>
      <%
      grant = funding.urls.last&.value
      ror = funding.affiliation.rors.first
      out = [
        (ror.present? ? link_to(funding.affiliation.name, ror.value) : funding.affiliation.name),
        link_to(grant, grant)
      ].compact.join(',</span><span>')
      %>
      <li><strong><%= humanize_underscored(name: funding.status) %></strong><span><%= out.html_safe %></span></li>
    <% end %>
  </ul>
<% end %>
