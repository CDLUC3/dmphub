<%# locals: dmp %>

<%
base_message = 'This page represents key information from a data management plan'
primary_funder = LandingPresenter.primary_funder(data_management_plan: dmp)
narrative_url = LandingPresenter.narrative_url(data_management_plan: dmp)
%>

<div class="t-step__landing">
  <div>
    <h1>A data management plan for this project was submitted to the <%= primary_funder %> with the information below.</h1>
  </div>

  <div class="t-step__logo">
    <% if narrative_url.present? && dmp.source_privacy == 'open' %>
      <%
      # Temporary hack until we can get the PDF download working
      url = narrative_url.value.gsub("api/v2/", "")
                               .gsub(".pdf", "/export.pdf?export[question_headings]=true")
      id = Identifier.new(value: url)
      %>
      <div><%= link_to image_tag('stack_of_papers_72x41.png', alt: 'DMP icon'),
                     url, target: "_blank", aria: { hidden: true } %></div>
      <div><%= base_message %> available <%= identifier_to_link(identifier: id, text: 'here') %>.</div>
    <% else %>
      <div><%= image_tag('stack_of_papers_72x41.png', alt: 'DMP icon') %></div>
      <div><%= base_message %>.</div>
    <% end %>
  </div>
</div>

<h2><%= @dmp.title %></h2>
