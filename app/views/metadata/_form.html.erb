<%= fields_for metadatum do |m| %>
  <%= render partial: 'identifiers/form',
             locals: {
               identifier: (metadatum.identifiers.first || Identifier.new),
               excluded_categories: %w[ror grid orcid]
             } %>
  <%= m.label :description %>
