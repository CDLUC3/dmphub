<%= form.fields_for :person, Person.new do |person_form| %>
  <%= person_form.label :name %>
  <%= person_form.text_field :name, class: 'required' %>
  <%= person_form.label :email %>
  <%= person_form.email_field :email %>
  <%= person_form.fields_for :identifiers, Identifier.new do |identifier_form| %>
    <%= identifier_form.hidden_field :category, value: 'orcid' %>
    <%= identifier_form.label :value, 'ORCID' %>
    <%= identifier_form.text_field :value %>
  <% end %>
<% end %>
