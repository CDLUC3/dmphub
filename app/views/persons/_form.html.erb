<%= f.fields_for :person do |p| %>
  <%= p.label :name %>
  <%= p.text_field :name %>
  <%= p.label :email %>
  <%= p.email_field :email %>
  <%= p.fields_for :identifiers do |i| %>
    <%= i.hidden_field :category, value: 'orcid' %>
    <%= i.label :value, 'ORCID' %>
    <%= i.text_field :value %>
  <% end %>
<% end %>
