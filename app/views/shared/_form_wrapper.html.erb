<%# locals: model, path, http_method, form_partial, autosave %>

<div class="form-wrapper<%= autosave ? ' autosave' : '' %>">
  <%= render partial: '/shared/form_messages', locals: { model: model } %>

  <%= form_with model: model, url: path, method: http_method.to_sym do |f| %>
    <div class="t-step__fields">
      <%= render partial: form_partial, locals: { form: f, model: model } %>

      <%= f.submit 'Save' %>
      <%= render partial: '/shared/form_messages', locals: { model: model } %>
    </div>
  <% end %>
</div>
